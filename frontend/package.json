{
  "name": "new",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:gh-pages": "ng build --base-href=/devblog/ && cp dist/new/browser/index.html dist/new/browser/404.html",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "npm run build:gh-pages && ngh --dir=dist/new/browser",

    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,html,scss,css,json,md}\" --log-level warn",
     "format": "npx prettier --write \"src/**/*.{ts,js,html,scss,css,json}\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "endOfLine": "lf",
    "arrowParens": "always",
    "bracketSpacing": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular",
          "printWidth": 100
        }
      },
      {
        "files": "*.scss",
        "options": {
          "parser": "scss",
          "printWidth": 100,
          "tabWidth": 2,
          "singleQuote": true,
          "semi": true
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/heroicons": "^33.0.0",
    "@ngxs/store": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
